@model FileManagerModel

<div class="jumbotron">
    <div class="container">
        @if (ViewData["Erro"] != null)
        {
            <div class="alert alert-dismissible alert-warning">
                <h4 class="alert-heading">Erro!</h4>
                <p class="mb-0">@ViewData["Erro"]</p>
            </div>
            <a asp-area="Admin" asp-controller="AdminImages" asp-action="Index" style="text-decoration: none; color: inherit;">
                <button type="button" class="btn btn-outline-primary">Voltar</button>
            </a>
        }
    </div>
    <div class="container">
        @if (@Model.Files != null)
        {
            var caminho = Model.PathImagesProduct;

            <div class="row">
                @foreach (FileInfo file in Model.Files)
                {
                    <div class="col-sm-4">
                        <div class="card mb-3">
                            <img src="~/@caminho/@file.Name" class="card-img-top" title="@file.Name" alt="Imagem do Card" style="width: 100%; height: 200px; object-fit: cover;" />
                            <div class="card-body">
                                <a href="@Url.Action("DeleteFile","AdminImages", new { fname=file.Name})" style="text-decoration: none;" class="card-link">Deletar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <div class="form-group mt-3">
        <a class="btn btn-outline-primary" asp-controller="AdminImages" asp-action="Index">Retornar</a>
    </div>
</div>