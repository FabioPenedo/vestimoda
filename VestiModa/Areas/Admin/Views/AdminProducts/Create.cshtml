@model VestiModa.Models.Product


<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label mb-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label mb-2"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Price" class="control-label mb-2"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="StockQuantity" class="control-label mb-2"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="CategoryId" class="control-label mb-2"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ProductId" class="form-label mt-4">Categorias</label>
                <select asp-for="ProductId" class="form-select" asp-items="@ViewData["CategoryId"] as SelectList"></select>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Criar" class="btn btn-outline-primary mb-3" />
                <a asp-action="Index" class="btn btn-outline-secondary mb-3">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>