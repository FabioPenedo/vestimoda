@{
    ViewData["Title"] = "Página não encontrada";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>404 - Página não encontrada</h3>
                </div>
                <div class="card-body">
                    @if (ViewData["Erro"] != null)
                    {
                        <p class="card-text">
                            @ViewData["Erro"]
                        </p>
                    }
                    <p class="card-text">
                        Desculpe, a página que você está tentando acessar não está disponível no momento.
                    </p>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
                        Voltar para a página inicial
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
